/ {
	model = "Nordic PCA20035";
	compatible = "nordic,pca20035", "nordic,nrf9160-sica",
		     "nordic,nrf9160";

	chosen {
		zephyr,console = &uart0;
	};

	buttons {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;

		button0: button_0 {
			gpios = <&gpio0 26 GPIO_PUD_PULL_UP>;
			label = "Button 1";
		};
	};

	leds {
		compatible = "gpio-leds";
		red_led: led_1 {
			gpios = <&gpio0 29 GPIO_INT_ACTIVE_LOW>;
			label = "RGB red channel";
		};
		green_led: led_2 {
			gpios = <&gpio0 30 GPIO_INT_ACTIVE_LOW>;
			label = "RGB green channel";
		};
		blue_led: led_3 {
			gpios = <&gpio0 31 GPIO_INT_ACTIVE_LOW>;
			label = "RGB blue channel";
		};
	};

	aliases {
		sw0 = &button0;
		led0 = &red_led;
		led1 = &green_led;
		led2 = &blue_led;
	};
};

&gpiote {
	status = "ok";
};

&gpio0 {
	status = "ok";
};

&i2c2 {
	status = "ok";
	sda-pin = <11>;
	scl-pin = <12>;

	bme680@0 {
		compatible = "bst,bme680";
		label = "BME680";
		reg = <0x76>;
		clock-frequency = <I2C_BITRATE_FAST>;
	};
};

&spi3 {
	status = "ok";
	sck-pin = <6>;
	mosi-pin = <7>;
	miso-pin = <8>;
	cs-gpios = <&gpio0 9 0>;

	adxl372-spi@0 {
		compatible = "adi,adxl372-spi";
		label = "ADXL372";
		spi-max-frequency = <8000000>;
		reg = <0>;
	};
};

&uart0 {
	current-speed = <115200>;
	status = "ok";
	tx-pin = <23>;
	rx-pin = <21>;
	rts-pin = <24>;
	cts-pin = <25>;
};

&uart1 {
	current-speed = <115200>;
	status = "ok";
	tx-pin = <18>;
	rx-pin = <19>;
	rts-pin = <22>;
	cts-pin = <20>;
};


&uart2 {
	current-speed = <115200>;
	status = "ok";
	tx-pin = <13>;
	rx-pin = <14>;
	rts-pin = <15>;
	cts-pin = <16>;
};


&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x10000>;
		};
		slot0_partition: partition@10000 {
			label = "image-0";
		};
		slot0_ns_partition: partition@40000 {
			label = "image-0-nonsecure";
		};
		slot1_partition: partition@80000 {
			label = "image-1";
		};
		slot1_ns_partition: partition@b0000 {
			label = "image-1-nonsecure";
		};
		scratch_partition: partition@f0000 {
			label = "image-scratch";
			reg = <0x000f0000 0xa000>;
		};
		storage_partition: partition@fa000 {
			label = "storage";
			reg = <0x000fa000 0x00006000>;
		};
	};
};

/ {
	/* SRAM allocated and used by the BSD library */
	sram0_bsd: memory@20010000 {
		device_type = "memory";
		compatible = "mmio-sram";
	};

	/* SRAM allocated to the Non-Secure image */
	sram0_ns: memory@20020000 {
		device_type = "memory";
		compatible = "mmio-sram";
	};
};

/* Include partition configuration file */
#include "nrf9160_pca20035_partition_conf.dts"
